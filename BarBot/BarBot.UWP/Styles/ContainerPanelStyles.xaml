<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarBot.UWP.Styles">

    <!-- Dimensions -->
    <x:Double x:Key="PageWidth">1280</x:Double>
    <x:Double x:Key="PageHeight">720</x:Double>

    <x:Double x:Key="WrapperWidth">1240</x:Double>
    <x:Double x:Key="WrapperHeight">620</x:Double>

    <!-- Container List -->
    <Style x:Key="ContainerListMainGridStyle" TargetType="Grid">
        <Setter Property="Height" Value="{StaticResource PageHeight}" />
        <Setter Property="Width" Value="{StaticResource PageWidth}" />
    </Style>

    <Style x:Key="ContainerListWrapperGridStyle" TargetType="Grid">
        <Setter Property="Width" Value="{StaticResource WrapperWidth}" />
        <Setter Property="Height" Value="{StaticResource WrapperHeight}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="20,20,20,20" />
    </Style>

    <Style x:Key="ContainerListIcGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,40,0,0" />
    </Style>
</ResourceDictionary>
