        <Button x:Name="ReadSensorButton" Content="Read Sensor" HorizontalAlignment="Left" Margin="233,105,0,0" VerticalAlignment="Top" Width="157" Height="29" Click="ReadSensorButton_Click" Background="#33000000" BorderBrush="White" Foreground="White"/>
    </Grid>
</UserControl>
