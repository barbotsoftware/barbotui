    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Name="ContainersPanel" HorizontalAlignment="Left" Height="252" Margin="0,38,0,0" VerticalAlignment="Top" Width="228"/>
