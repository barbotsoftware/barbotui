<UserControl
    x:Class="BarBot.UWP.UserControls.Uc_RecipeTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarBot.UWP.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="200">

    <Canvas>
        <Grid Canvas.Top="75" Canvas.Left="25" Width="150" Background="#33000000" Canvas.ZIndex="99">
            <TextBlock Text="{Binding Path=Recipe.Name}" FontFamily="Microsoft Yi Baiti" FontSize="24" Typography.Capitals="AllSmallCaps" Foreground="#FFE6E1E1" Canvas.ZIndex="99" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Path x:Name="hexagon" Stroke="#FF222222" StrokeThickness="5" Height="170" Width="200" 
                  Loaded="hexagon_Loaded">
            <Path.Fill>
                <ImageBrush Stretch="Fill" ImageSource="{Binding Path=Recipe.Img}"/>
            </Path.Fill>
        </Path>
    </Canvas>
</UserControl>
