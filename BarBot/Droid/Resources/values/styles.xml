<?xml version="1.0" encoding="UTF-8" ?>
<resources>	
	<style name="BarBotTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background_gray</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

		<item name="android:actionBarStyle">@style/BarBotTheme_ActionBar</item>
		<item name="android:actionBarSize">@dimen/action_bar_height</item>
		<item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
		<item name="android:homeAsUpIndicator">@drawable/ic_ab_up_compat</item>
    </style>

	<!-- ActionBar -->
	<style name="BarBotTheme_ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
		<item name="android:background">@color/actionbar_gray</item>
		<item name="android:icon">@drawable/actionbar_icon_placeholder_compat</item>
		<item name="android:titleTextStyle">@style/BarBotTheme_ActionBar_Title</item>
	</style>

	<!-- ActionBar Title -->
	<style name="BarBotTheme_ActionBar_Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="BarBotTheme_GridView">
		
	</style>

	<style name="BarBotTheme_OrderButton" parent="android:Widget.Holo.Button">
		<item name="android:background">@color/barbot_blue</item>
	    <item name="android:textColor">@color/text_white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">20dp</item>
	    <item name="android:textSize">@dimen/text_size</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
    </style>
</resources>